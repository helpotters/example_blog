<h1 class="">helpotters blog</h1>

<% @blog_posts.each do |blog_post|  %>
    <div class="mx-auto max-w-md rounded-lg bg-white shadow">
        <div class="p-4">
            <h3 class="text-xl font-medium text-gray-900"><%= link_to blog_post.title, blog_post %></h3>
            <p class="mt-1 text-gray-500"><%= blog_post.summary %></p>
        </div>
    </div>
<% end %>
